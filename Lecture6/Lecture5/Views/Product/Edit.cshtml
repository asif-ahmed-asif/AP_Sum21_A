
@{
    ViewBag.Title = "Edit";
}
@model Lecture5.Models.Product
<h2>Edit</h2>
<div>
    <form action="" method="post">
        <input type="hidden" name="Id" value="@Model.Id">
        <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Onion..">
        <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price..">
        <input type="text" name="Qty" value="@Model.Qty" class="form-control" placeholder="Quantity..">
        <textarea class="form-control" name="Description">@Model.Description</textarea>
        <input type="submit" class="btn btn-block" value="Edit" />
    </form>
</div>